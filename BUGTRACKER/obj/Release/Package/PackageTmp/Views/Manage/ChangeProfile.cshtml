@model BUGTRACKER.Models.ChangeProfileViewModel
@{
    ViewBag.Title = "Change Profile";
}
<br />
<br />
<div class="container">

    @using (Html.BeginForm("ChangeProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Email)

        <p class="text-success">@ViewBag.StatusMessage</p>
        <div class="form-group">
            <dl class="dl-horizontal">
                <dt>
                    First Name:
                </dt>
                <dd>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </dd>
                <dt>
                    Last Name:
                </dt>
                <dd>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </dd>
                <dt>
                    Display Name:
                </dt>
                <dd>
                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                </dd>
            </dl>
        </div>
        <div class="form-group">
            <div class="col-md-2 pull-left">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    }

</div>